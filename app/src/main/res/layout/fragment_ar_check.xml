<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/messageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Loading ARCore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/toNonArButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Non AR"
        app:layout_constraintEnd_toStartOf="@+id/toArButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageView"
        />

    <Button
        android:id="@+id/toArButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to AR"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toNonArButton"
        app:layout_constraintTop_toBottomOf="@+id/messageView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
